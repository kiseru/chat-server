<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">
    <context:annotation-config/>

    <bean id="chatServer"
          class="com.alex.chat.server.ChatServer"/>

    <bean id="groupService"
          class="com.alex.chat.server.service.impl.GroupServiceImpl"/>

    <bean id="userService"
          class="com.alex.chat.server.service.impl.UserServiceImpl"/>

    <bean id="receiverService"
          class="com.alex.chat.server.service.impl.ReceiverServiceImpl"/>

    <bean id="senderService"
          class="com.alex.chat.server.service.impl.SenderServiceImpl"/>
</beans>